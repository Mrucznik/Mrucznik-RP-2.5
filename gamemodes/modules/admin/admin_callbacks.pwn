#include <YSI\y_hooks>

//-----------------<[ Callbacki: ]>-----------------
hook OnGameModeInit()
{
	adminGroup = Group_Create("admini");
}

admini_OnPlayerLogin(playerid)
{
	if(PlayerInfo[playerid][pAdmin] > 0)
	{
		MAP_clear(AdminObjects[playerid]);
		Group_SetPlayer(adminGroup, playerid, true);
	}
}

