command_wyniki_Impl(playerid, params[256])
{
    new string[64];

    if(IsPlayerConnected(playerid))
    {
        SendClientMessage(playerid, COLOR_LIGHTGREEN, "Tabela wyników:");
        foreach(new i : Player)
		{
		    if(zawodnik[i] == 1)
		    {
		        if(okregi[i] >= 1)
		        {
		            new iplayer[MAX_PLAYER_NAME];
			        GetPlayerName(i, iplayer, sizeof(iplayer));
			        format(string, sizeof(string), "%s - %d okr¹¿eñ", iplayer, okregi[i]);
					SendClientMessage(playerid, COLOR_WHITE, string);
				}
		    }
		}
    }
	return 1;
}

