Przemytnik_OnPlayerLogin(playerid)
{
	new actionID = GetPlayerSmugglingActionID(playerid);
	if(actionID == -1)
	{
		return 1;
	}

	CreateSmugglingPickupCheckpoint(playerid, actionID);
	return 1;
}

