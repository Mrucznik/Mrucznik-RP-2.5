command_staty_Impl(playerid, params[256])
{
    if(IsPlayerConnected(playerid))
    {
		if (gPlayerLogged[playerid] != 0)
		{
			if(GetPVarInt(playerid, "OgladaStaty") == 0)
			{
				ShowStats2(playerid);
				SetPVarInt(playerid, "OgladaStaty", 1); 
			}
			else
			{
				SetPVarInt(playerid, "OgladaStaty", 0);
				HideStats2(playerid); 
			}
		}
	}
	return 1;
}

